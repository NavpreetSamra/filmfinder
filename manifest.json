{
  "manifest_version": 2,
  "name"            : "FilmFinder",
  "description"     : "Browse and download YIFY movies in excellent 720p, 1080p and 3D quality from YTS.AG",
  "short_name"      : "FilmFinder",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "images/logo.png"
  },
  "permissions": [
    "downloads",
    "https://yts.ag/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
