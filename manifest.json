{
  "manifest_version": 2,
  "name"            : "FilmFinder",
  "description"     : "Browse and download YIFY movies in excellent 720p, 1080p and 3D quality from YTS.AG",
  "short_name"      : "FilmFinder",
  "version"         : "0.6",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "logo/icon.png"
  },
  "permissions": [
    "downloads","webRequest","https://yts.ag/", "tabs", "clipboardRead", "clipboardWrite"
  ],
  "icons": {
    "16": "logo/logo@16.png",
    "48": "logo/logo@48.png",
    "128": "logo/logo@128.png"
  }
}
